{% block title %}Admin{% endblock %}

{% block body %}
    <h1>Admin</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ admin.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ admin.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ admin.roles ? admin.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Lastname</th>
                <td>{{ admin.lastname }}</td>
            </tr>
            <tr>
                <th>Firstname</th>
                <td>{{ admin.firstname }}</td>
            </tr>
            <tr>
                <th>IsVerified</th>
